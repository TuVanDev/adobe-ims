<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="AdminAdobeImsDisabledInfoCommandTest">
        <annotations>
            <features value="Cli"/>
            <description value="Runs bin/magento admin:adobe-ims info command"/>
            <severity value="MINOR"/>
            <group value="admin_ims"/>
            <testCaseId value="CABPI-186"/>
        </annotations>
        <before>
            <actionGroup ref="AdminDisableAdobeImsActionGroup" stepKey="disableAdminImsAuthModule" />
        </before>

        <magentoCLI command="admin:adobe-ims info" stepKey="infoAdobeIms"/>
    </test>
</tests>
