<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <!-- TODO: move this so we only include the built minified version -->
        <!-- Include global variables first -->
        <css src="Magento_AdminAdobeIms::node_modules/@spectrum-css/vars/dist/spectrum-global.css"
             rel="stylesheet"
             type="text/css" />

        <!-- Include only the scales your application needs -->
        <css src="Magento_AdminAdobeIms::node_modules/@spectrum-css/vars/dist/spectrum-medium.css"
             rel="stylesheet"
             type="text/css" />
        <css src="Magento_AdminAdobeIms::node_modules/@spectrum-css/vars/dist/spectrum-large.css"
             rel="stylesheet"
             type="text/css" />

        <!-- Include only the colorstops your application needs -->
        <css src="Magento_AdminAdobeIms::node_modules/@spectrum-css/vars/dist/spectrum-lightest.css"
             rel="stylesheet"
             type="text/css" />
        <css src="Magento_AdminAdobeIms::node_modules/@spectrum-css/vars/dist/spectrum-light.css"
             rel="stylesheet"
             type="text/css" />
        <css src="Magento_AdminAdobeIms::node_modules/@spectrum-css/vars/dist/spectrum-dark.css"
             rel="stylesheet"
             type="text/css" />
        <css src="Magento_AdminAdobeIms::node_modules/@spectrum-css/vars/dist/spectrum-darkest.css"
             rel="stylesheet"
             type="text/css" />

        <!-- Include index-vars.css for all components you need -->
        <css src="Magento_AdminAdobeIms::node_modules/@spectrum-css/page/dist/index-vars.css"
             rel="stylesheet"
             type="text/css" />
        <css src="Magento_AdminAdobeIms::node_modules/@spectrum-css/icon/dist/index-vars.css"
             rel="stylesheet"
             type="text/css" />
        <css src="Magento_AdminAdobeIms::node_modules/@spectrum-css/button/dist/index-vars.css"
             rel="stylesheet"
             type="text/css" />
        <css src="Magento_AdminAdobeIms::node_modules/@spectrum-css/dialog/dist/index-vars.css"
             rel="stylesheet"
             type="text/css" />
        <css src="Magento_AdminAdobeIms::node_modules/@spectrum-css/modal/dist/index-vars.css"
             rel="stylesheet"
             type="text/css" />
        <css src="Magento_AdminAdobeIms::node_modules/@spectrum-css/card/dist/index-vars.css"
             rel="stylesheet"
             type="text/css" />
        <css src="Magento_AdminAdobeIms::node_modules/@spectrum-css/typography/dist/index-vars.css"
             rel="stylesheet"
             type="text/css" />
    </head>
    <body>
        <attribute name="class" value="spectrum" />
        <attribute name="class" value="spectrum--medium" />
        <attribute name="class" value="spectrum--light" />
        <attribute name="class" value="adobe-ims-body" />
        <referenceContainer name="root" htmlClass="adobe-ims-root" />
        <referenceContainer name="login.content" htmlClass="admin-ims-login-wrapper" />
        <referenceContainer name="login.content">
            <referenceBlock name="admin.login" remove="true"/>
            <block class="Magento\Backend\Block\Template"
                   name="adminhtml_auth_login_sso"
                   template="Magento_AdminAdobeIms::admin/sign_in.phtml"
                   ifconfig="adobe_ims/integration/enabled">
                <arguments>
                    <argument name="link_view_model" xsi:type="object">Magento\AdminAdobeIms\ViewModel\LinkViewModel</argument>
                </arguments>
            </block>

            <referenceBlock name="admin.login" template="Magento_AdminAdobeIms::admin/login.phtml">
                <arguments>
                    <argument name="admin_form_visibility_view_model" xsi:type="object">Magento\AdminAdobeIms\ViewModel\AdminFormVisibilityViewModel</argument>
                </arguments>
            </referenceBlock>
        </referenceContainer>

        <referenceContainer name="login.footer" htmlClass="adobe-ims-footer">
            <container name="login.footer.typography.wrapper" htmlTag="div" htmlClass="spectrum-Body spectrum-Body--sizeM" />
        </referenceContainer>
        <move element="copyright" destination="login.footer.typography.wrapper" before="-" />

        <!-- TODO: include these correctly -->
        <referenceContainer name="login.header" remove="true"/>
    </body>
</page>
